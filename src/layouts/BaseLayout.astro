---
import { SITE } from "../config";

import BasicScripts from "../components/common/BasicScripts.astro";
import MetaTags from "../components/common/MetaTags.astro";

import "@fontsource/barlow-condensed";
import barlowCondensed from "@fontsource/barlow-condensed/files/barlow-condensed-latin-400-normal.woff?url";

const { title = SITE.title, description = SITE.description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <MetaTags title={title} description={description} />
    <link
      rel="preload"
      as="font"
      type="font/woff2"
      href={barlowCondensed}
      crossorigin="anonymous"
    />
  </head>
  <body
    class={`
      tracking-tight
      px-3
      bg-gradient-to-b from-gray-300 to-gray-200
      text-gray-900 antialiased
      dark:bg-gradient-to-b dark:from-slate-900 dark:to-slate-800
      dark:text-slate-300 
    `}
  >
    <slot />
    <BasicScripts />
  </body>
</html>

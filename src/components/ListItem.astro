---
import type { IListItem } from "../types";

export interface ListItemProps {
  listItem: IListItem;
}

const { listItem } = Astro.props;
---

<li
  style={{ backgroundImage: `url(${listItem.image})` }}
  class="bg-cover bg-center bg-no-repeat shadow-lg last:odd:col-span-2"
>
  <div
    class="relative flex h-full w-full flex-col items-center justify-center gap-4 bg-slate-200 bg-opacity-90 px-5 py-20 text-center dark:bg-slate-800 dark:bg-opacity-90"
  >
    <span
      class="absolute top-2 left-2 inline-flex rounded bg-slate-100 p-1 px-2 font-medium dark:bg-slate-900 dark:text-slate-300"
      >{listItem.featured}</span
    >
    <h2 class="text-2xl">{listItem.name}</h2>
    <p class="text-lg">{listItem.description}</p>
    <div class="flex flex-row items-center justify-center gap-1">
      <p>{listItem.technologies[0]}</p>
      {
        listItem.technologies.slice(1).map((technology: string) => (
          <>
            <span>Â·</span>
            <p>{technology}</p>
          </>
        ))
      }
    </div>
  </div>
</li>

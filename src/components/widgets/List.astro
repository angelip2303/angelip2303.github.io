---
import type { IListItem } from "../../types";
import ListItem from "../common/ListItem.astro";

export interface ListProps {
  list: IListItem[];
}

const { list } = Astro.props;
---

<ul
  class="grid grid-cols-1 gap-5 bg-gradient-to-br md:grid-cols-2 2xl:grid-cols-3"
>
  {list.map((listItem: IListItem) => <ListItem listItem={listItem} />)}
</ul>

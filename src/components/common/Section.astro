---
import { render, type CollectionEntry } from "astro:content";

interface Props {
  section: CollectionEntry<"sections">;
}

const { section } = Astro.props;
const { Content } = await render(section);
---

<section class="flex flex-col items-center gap-3">
  <h3
    class={`
        w-fit
        px-2 py-0.5
        text-slate-100 dark:text-slate-900 bg-slate-900 dark:bg-slate-100
        rounded-sm
    `}
  >
    {section.data.title}
  </h3>
  <h2 class="text-center text-2xl">{section.data.subtitle}</h2>
  <p class="text-center">
    <Content />
  </p>
  <slot />
</section>
